<h1 class="text-center"><%= @cocktail.name %></h1>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> de  - <%= dose.ingredient.name %></li>
        <% end %>
      </ul>
      <%= link_to "Back to list", cocktails_path(), class: 'btn btn-primary'%>
    </div>
  </div>
</div>
